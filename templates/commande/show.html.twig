{% extends 'backend/indexbackend.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
  <div class="container my-5">
    <!-- Titre principal -->
    <h1 class="text-center mb-4" style="color: #2e8b57;">Commande Details</h1>

    <!-- DÃ©tail de la commande -->
    <div class="card shadow-lg p-4 rounded" style="background-color: #ffffff;">
      <div class="card-body">
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <th scope="row">IdCommande</th>
              <td>{{ commande.getIdCommande() }}</td>
            </tr>
            <tr>
              <th scope="row">StatutCommande</th>
              <td>{{ commande.getStatutCommandes() }}</td>
            </tr>
            <tr>
              <th scope="row">DateCommande</th>
              <td>{{ commande.getdateCommande() ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
              <th scope="row">Produit</th>
              <td>{{ commande.getProduit() }}</td>
            </tr>
            <tr>
              <th scope="row">Prix</th>
              <td>{{ commande.getPrix() | number_format(2, ',', ' ') }} TND</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
      <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary">Back to list</a>
      <a href="{{ path('app_commande_edit', {'idCommande': commande.idCommande}) }}" class="btn btn-warning">Edit</a>
    </div>

    <!-- Delete Form -->
    <div class="mt-4">
      {{ include('commande/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}

